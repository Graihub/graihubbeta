-- No Button
local noBtn = Instance.new("TextButton")
noBtn.Size = UDim2.new(0.4, 0, 0.25, 0)
noBtn.Position = UDim2.new(0.5, 0, 0.65, 0)
noBtn.Text = "No"
noBtn.TextColor3 = Color3.new(1, 1, 1)
noBtn.BackgroundColor3 = Color3.fromRGB(180, 40, 40)
noBtn.Font = Enum.Font.MontserratMedium
noBtn.TextSize = 18
noBtn.Parent = confirmFrame
Instance.new("UICorner", noBtn).CornerRadius = UDim.new(0, 6)

-- Logic
closeBtn.MouseButton1Click:Connect(function()
	confirmFrame.BackgroundTransparency = 1
	confirmFrame.Visible = true
	TweenService:Create(confirmFrame, TweenInfo.new(0.3), {BackgroundTransparency = 0.1}):Play()
end)

yesBtn.MouseButton1Click:Connect(function()
	local tween = TweenService:Create(mainFrame, TweenInfo.new(0.3), {
		Size = UDim2.new(0, 0, 0, 0),
		BackgroundTransparency = 1
	})
	tween:Play()
	tween.Completed:Connect(function()
		screenGui:Destroy()
	end)
end)

noBtn.MouseButton1Click:Connect(function()
	confirmFrame.Visible = false
end)

-- Minimize Toggle
local minimized = false
minimizeBtn.MouseButton1Click:Connect(function()
	if not minimized then
		TweenService:Create(mainFrame, TweenInfo.new(0.3), {Size = UDim2.new(0, 400, 0, 35)}):Play()
		minimized = true
	else
		TweenService:Create(mainFrame, TweenInfo.new(0.3), {Size = UDim2.new(0, 400, 0, 260)}):Play()
		minimized = false
	end
end)

-- Draggables
makeDraggable(titleBar, mainFrame)
makeDraggable(confirmFrame, confirmFrame)
corner.Parent = mainframe, confirmFrame, noBtn, closeBtn, minimizeBtn, yesBtn
uistroke.Parent = mainFrame, confirmFrame, ExampleButton
