uistroke.Thickness = 5 -- number (px thickness of the stroke)
uistroke.Color = Color3.fromRGB(0,0,0) -- white outline (change as needed)
uistroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border -- only around edges

