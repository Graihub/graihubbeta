-- Create Load Button
local function createButton(name, callback)
    local Btn = Instance.new("TextButton")
    Btn.Size = UDim2.new(0, 160, 0, 45)
    Btn.Position = UDim2.new(0.5, -80, 0, 80)
    Btn.Text = name
    Btn.TextColor3 = Color3.new(1, 1, 1)
    Btn.Font = Enum.Font.MontserratBold
    Btn.TextSize = 20
    Btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    Btn.Parent = mainFrame

    local btnCorner = Instance.new("UICorner", Btn)
    btnCorner.CornerRadius = UDim.new(0, 8)

    local uistroke = Instance.new("UIStroke", Btn)
    uistroke.Thickness = 3 -- number (px thickness of the stroke)
    uistroke.Color = Color3.fromRGB(0,0,0) -- white outline (change as needed)
    uistroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border -- only around edges


    -- Mouse Click
    Btn.MouseButton1Click:Connect(function()
        if callback then
            callback()
        else
            print(name .. " button clicked!")
        end
    end)
    return Btn
end

-- Example usage: create Load button
local loadBtn = createButton("Load", function()
    print("Load button pressed")
    loadMainUI()
    task.wait(5)
    local player = game.Players.LocalPlayer
    local gui = player:WaitForChild("PlayerGui")

    local oldLoader = gui:FindFirstChild("HorizonHubLoader")
    if oldLoader then
    oldLoader:Destroy()
end
end)


-- Confirmation Frame
local confirmFrame = Instance.new("Frame")
